{
  "name": "adam",
  "displayName": "Adam",
  "description": "Adam is a minimalist and elegant theme with a built-in icon pack.",
  "version": "0.1.1",
  "publisher": "origin",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "bun ./core/build.js",
    "prepublish": "npm run build && vsce package --out adam.vsix",
    "publish": "vsce publish"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#F7F7F8",
    "theme": "light"
  },
  "maintainers": [
    "Ricardo Brito <souzk@mail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/souzk/vscode"
  },
  "bugs": {
    "url": "https://github.com/souzk/vscode/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "adam",
    "minimalist",
    "icons"
  ],
  "engines": {
    "vscode": "^1.22.0"
  },
  "contributes": {
    "themes": [
      {
        "id": "adam",
        "label": "Adam",
        "uiTheme": "vs-dark",
        "path": "./theme/base.json"
      },
      {
        "id": "eve",
        "label": "Eve",
        "uiTheme": "vs",
        "path": "./theme/light.json"
      }
    ],
    "iconThemes": [
      {
        "id": "monokai",
        "label": "Monokai",
        "path": "icons/icons.json"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.20"
  }
}